# Database Configuration
DB_URL=sqlite:./data/auto.db

# API Security
AUTH_BEARER_KEY=your_secret_bearer_token_here

# LLM Provider Configuration (openai|gemini|claude)
LLM_PROVIDER=openai

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# Browser Use API Key
BROWSER_USE_API_KEY=your_browser_use_api_key_here

# Daytona Configuration
DAYTONA_API_KEY=your_daytona_api_key_here
DAYTONA_API_URL=https://api.daytona.io/v1

# Galileo AI Configuration (optional)
GALILEO_AI_API_KEY=your_galileo_ai_api_key_here

# Media API Keys
PEXELS_API_KEY=your_pexels_api_key_here

# SSH Deployment Configuration
SERVER_HOST=biaz.hurated.com
SERVER_PATH=AutoViral

# Docker Ports (all ports used in compose.yml - rounded to 000, avoiding conflicts)
API_PORT=3000
WORKER_PORT=7000
DB_PORT=21000
REDIS_PORT=22000

# Platform Credentials (for posting) - Instagram only
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Rate Limiting
MAX_POSTS_PER_HOUR=10
MAX_GENERATIONS_PER_HOUR=20
MAX_DISCOVERIES_PER_HOUR=60

# Daytona Sandbox Configuration
MAX_SANDBOX_LIFETIME_MINUTES=30
SANDBOX_CLEANUP_INTERVAL_MINUTES=5
